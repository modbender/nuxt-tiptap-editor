{
  "name": "nuxt-tiptap-editor",
  "version": "3.0.0",
  "description": "Essentials to Quickly Integrate TipTap Editor into your Nuxt App",
  "repository": "modbender/nuxt-tiptap-editor",
  "keywords": [
    "vue",
    "vue.js",
    "vue3",
    "nuxt",
    "nuxt.js",
    "nuxt3",
    "tiptap",
    "tiptap nuxt module",
    "text editor",
    "wysiwyg",
    "wysiwyg editor",
    "nuxt-tiptap",
    "nuxt-tiptap-editor",
    "nuxt editor",
    "nuxt module",
    "nuxt3 module"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "release:patch": "pnpm version patch && pnpm run release:publish",
    "release:minor": "pnpm version minor && pnpm run release:publish",
    "release:major": "pnpm version major && pnpm run release:publish",
    "release:publish": "pnpm run lint && pnpm run test && pnpm run prepack && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^3.10.2",
    "@tiptap/extension-image": "^3.10.2",
    "@tiptap/extension-link": "^3.10.2",
    "@tiptap/pm": "^3.10.2",
    "@tiptap/starter-kit": "^3.10.2",
    "@tiptap/vue-3": "^3.10.2",
    "lowlight": "^3.3.0",
    "prosemirror-replaceattrs": "^1.0.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^1.10.0",
    "@nuxt/kit": "^4.2.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.15.34",
    "changelogen": "^0.6.1",
    "eslint": "^9.30.0",
    "h3-formidable": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nuxt": "^4.2.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4",
    "vue-tsc": "~2.2.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.10.0",
  "lint-staged": {
    "*.{ts,tsx,vue,js,jsx,mjs,cjs}": [
      "eslint --fix"
    ]
  }
}
